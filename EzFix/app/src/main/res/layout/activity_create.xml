<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/ezfix">



    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:src="@drawable/ezfix_logo"
        android:id="@+id/ezfixlogo"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:text="Create New \n   Account"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@+id/ezfixlogo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/head"
        android:text="USERNAME"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginLeft="45dp"

        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/usernameEditext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="45dp"
        android:layout_below="@id/username"
        android:background="@drawable/edit_background"
        android:hint="Username"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/passlabel"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="PASSWORD"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_below="@id/usernameEditext"
        android:layout_marginLeft="45dp"

        android:textColor="@color/white"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        app:passwordToggleEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/passlabel">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginLeft="45dp"

            android:layout_marginRight="45dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:background="@drawable/edit_background"
            android:hint="Password"/>



    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/phone"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/password"
        android:text="PHONE NUMBER"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginLeft="45dp"

        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/phoneEditext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="45dp"
        android:layout_below="@id/phone"
        android:background="@drawable/edit_background"
        android:hint="Username"
        android:paddingLeft="10dp" />


    <TextView
        android:id="@+id/email"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/phoneEditext"
        android:text="EMAIL"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginLeft="45dp"

        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/emailEditext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="45dp"
        android:layout_below="@id/email"
        android:background="@drawable/edit_background"
        android:hint="ex.@yahoo.com"
        android:paddingLeft="10dp" />


    <Button
        android:id="@+id/btn_create"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_below="@id/emailEditext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/red"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/white"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="OR CONNECT WITH"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/btn_create"
        android:clickable="true"
        android:textColor="@color/white"
        android:layout_marginLeft="45dp"/>


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:id="@+id/fb"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp"
        android:layout_below="@id/connect"
        android:src="@drawable/fb_logo"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="130dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/connect"
        android:id="@+id/google"

        android:src="@drawable/google_logo"
        />










</RelativeLayout>